{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "description": "Arion docker image",
      "fileMatch": [
        "(^|/)nix/.+\\.nix$"
      ],
      "matchStrings": [
        "image *= *\"(?<depName>[^:]+):(?<currentValue>[^\"@]+)(?:@(?<currentDigest>sha256:[0-9a-f]+))?\";"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
  ]
}
